<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:font="http://schemas.android.com/apk/"
        font:typeface="ROBOTO-REGULAR.TTF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        >

    <TextView
            android:text="Inscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:textColor="#FFF"
            android:layout_marginTop="10dp"
            android:textAlignment="center" android:textAllCaps="false" android:fontFamily="monospace"/>


    <TextView
            android:text="Nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#FFF" android:layout_marginTop="10dp" android:fontFamily="casual"/>


    <EditText android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="@drawable/radius"
              android:layout_marginTop="10dp"
              android:hint="Votre nom"
              android:paddingLeft="10dp"/>

    <TextView
            android:text="Prénom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#FFF" android:layout_marginTop="10dp" android:fontFamily="casual"/>


    <EditText android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="@drawable/radius"
              android:layout_marginTop="10dp"
              android:hint="Votre prénom"
              android:paddingLeft="10dp"/>

    <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#FFF" android:layout_marginTop="10dp" android:fontFamily="casual"/>


    <EditText android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="@drawable/radius"
              android:layout_marginTop="10dp"
              android:hint="Votre email"
              android:paddingLeft="10dp"/>


    <TextView
            android:text="Mot de passe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#FFF" android:layout_marginTop="10dp" android:fontFamily="casual"/>


    <EditText android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="@drawable/radius"
              android:layout_marginTop="10dp"
              android:hint="choisissez un mot de passe"
              android:paddingLeft="10dp"/>

    <TextView
            android:text="Confirmation du mot de passe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#FFF" android:layout_marginTop="10dp" android:fontFamily="casual"/>


    <EditText android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="@drawable/radius"
              android:layout_marginTop="10dp"
              android:hint="Retaper votre mot de passe"
              android:paddingLeft="10dp"/>

    <Button android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="S'inscrire"
            android:layout_marginTop="20dp"
            android:textColor="@color/connexion"
            android:backgroundTint="#FFDD32"
            android:background="@drawable/radius"
    />


</LinearLayout>