<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nouveau "
                    android:textColor="@color/colorPrimary"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Evénement"
                    android:textAlignment="viewStart"
                    android:textSize="28sp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:textColor="#000"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/nomEvenement"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radius"
                android:hint="Le nom de l'évément"
                android:paddingLeft="10dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lieu"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/lieuEvenement"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius"
                        android:hint="Lieu de l'événement"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Catégorie"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="9dp" />

                    <Spinner
                            android:id="@+id/categorie"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:entries="@array/spinner_arrays"
                            android:spinnerMode="dropdown"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="209dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date début"
                        android:textColor="#000"
                        android:textSize="18sp" />
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <EditText
                                android:id="@+id/anneeDebut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/radius"
                                android:hint="aaaa"
                                android:paddingLeft="10dp"
                                android:layout_weight="1"
                                android:maxLength="4"
                                android:inputType="number"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView62"
                                android:layout_weight="1" android:text="/" android:textSize="24sp"/>

                        <EditText
                                android:id="@+id/moisDebut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/radius"
                                android:hint="mm"
                                android:paddingLeft="10dp"
                                android:layout_weight="1"
                                android:maxLength="2"
                                android:inputType="number"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView63"
                                android:text="/" android:textSize="24sp"/>

                        <EditText
                                android:id="@+id/jourDebut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/radius"
                                android:hint="jj"
                                android:paddingLeft="10dp"
                                android:layout_weight="1"
                                android:maxLength="2"
                                android:inputType="number"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Heure"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <EditText
                                android:id="@+id/heureDebut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/radius"
                                android:hint="hh"
                                android:paddingLeft="10dp"
                                android:layout_weight="1"
                                android:maxLength="2"
                                android:inputType="number"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView66"
                                android:layout_weight="1"
                                android:text=":"
                                android:textSize="24sp"/>

                        <EditText
                                android:id="@+id/minDebut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/radius"
                                android:hint="mm"
                                android:paddingLeft="10dp"
                                android:layout_weight="1"
                                android:maxLength="2"
                                android:inputType="number"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="209dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewDateFin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date fin"
                        android:textColor="#000"
                        android:textSize="18sp" />
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <EditText
                                android:id="@+id/anneeFin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/radius"
                                android:hint="aaaa"
                                android:paddingLeft="10dp"
                                android:layout_weight="1"
                                android:maxLength="4"
                                android:inputType="number"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content" android:id="@+id/textView6"
                                android:layout_weight="1" android:text="/" android:textSize="24sp"/>

                        <EditText
                                android:id="@+id/moisFin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/radius"
                                android:hint="mm"
                                android:paddingLeft="10dp"
                                android:layout_weight="1"
                                android:maxLength="2"
                                android:inputType="number"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content" android:id="@+id/textView61"
                                android:text="/" android:textSize="24sp"/>

                        <EditText
                                android:id="@+id/jourFin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/radius"
                                android:hint="jj"
                                android:paddingLeft="10dp" android:layout_weight="1"
                                android:maxLength="2"
                                android:inputType="number"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewHeureFin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Heure"
                        android:textSize="18sp"
                        android:textColor="#000"/>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <EditText
                                android:id="@+id/heureFin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/radius"
                                android:hint="hh"
                                android:paddingLeft="10dp"
                                android:layout_weight="1"
                                android:maxLength="2"
                                android:inputType="number"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView65"
                                android:layout_weight="1" android:text=":"
                                android:textSize="24sp"/>

                        <EditText
                                android:id="@+id/minFin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/radius"
                                android:hint="mm"
                                android:paddingLeft="10dp"
                                android:layout_weight="1"
                                android:maxLength="2"
                                android:inputType="number"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Description"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:inputType="textMultiLine"
                android:layout_height="119dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radius"
                android:hint="La description de l'évément"
                android:paddingLeft="10dp" />

            <Space
                style="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                     <Button
                        android:id="@+id/button_choose_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Choisir une image"
                        android:layout_gravity="center_vertical"
                        android:textColor="#fff"
                        android:background="#f1c40f"/>
                    <Button
                            android:id="@+id/button_remove_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="retirer l'image"
                            android:layout_gravity="center_vertical"
                            android:textColor="#fff"
                            android:background="#e74c3c"
                            android:visibility="gone"/>

                </LinearLayout>

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/selectedImage"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"/>
            </LinearLayout>

            <Space
                style="20dp"
                android:layout_width="match_parent"
                android:layout_height="27dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amis"
                android:textSize="18sp"
                android:textColor="#000"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="100"
                    android:hint="chercher une personne" />


            <ListView
                android:id="@+id/liste_affichage_amis"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:nestedScrollingEnabled="true"/>

            <Space
                style="8dp"
                android:layout_width="match_parent"
                android:layout_height="11dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F0363C"
                    android:textColor="#fff"
                    android:text="Annuler" />

                <Button
                    android:id="@+id/button_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Valider"
                    android:textColor="#fff"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>