<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#fff">

<ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
android:layout_weight="1">

    <LinearLayout android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_width="match_parent">


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="214dp"
                app:srcCompat="@drawable/event"
                android:id="@+id/image_event"
        />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:background="#ECF0F1"
            android:layout_gravity="center_vertical">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical">
            <TextView
                    android:text="Anniversaire Paul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nom_event"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            <TextView
                    android:text="Nancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ville_event"
                    android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical">
            <TextView
                    android:text="14:00"
                    android:textColor="#101010"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/heur_event"
                    android:gravity="right"
                    android:textSize="16dp"/>
            <TextView
                    android:text="01/01/2019"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_event"
                    android:gravity="right"
                    android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>


<TextView
            android:text="Eh oui, c'est bien moi ! Vous l'aviez deviné, n'est-ce pas ?\n
En 40 ans, j'ai UN TOUT PETIT peu changé...
Je pleure moins, ne prends plus de biberon, sais lacer mes chaussures...\n
Mais je reste aussi adorable ! ;-)\n
C'est avec grand plaisir que je vous invite à venir fêter mes 40 ans\n
au restaurant Dell Arte
"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_event"
            android:textColor="#101010"
            android:textSize="16dp"
            android:padding="15dp"
    />


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:background="@drawable/border"
            android:layout_marginBottom="10dp">

        <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/user"
                android:id="@+id/imageView5"
                android:layout_weight="1"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical">
                <TextView
                        android:text="Paul Paul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/proprietaire_event"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                <TextView
                        android:text="21:55"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/heur_publication"
                        android:textSize="16dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="right">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/notif_icon"
                        android:id="@+id/notification_event"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/quit_event"
                        android:id="@+id/quit_event"
                        android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
            <ImageView android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_marginLeft="15dp"
                       android:src="@drawable/coment"/>
            <TextView
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:id="@+id/nombre_commentaires"
                    android:textColor="#666666"
                    android:textColorHint="#101010"
            />
            <TextView
                    android:text="Commentaires"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:textColorHint="#101010"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <include android:layout_width="match_parent" android:layout_height="wrap_content"
                 layout="@layout/item_comment"/>
        <include android:layout_width="match_parent" android:layout_height="wrap_content"
                 layout="@layout/item_comment"/>
        <include android:layout_width="match_parent" android:layout_height="wrap_content"
                 layout="@layout/item_comment"/>
        <include android:layout_width="match_parent" android:layout_height="wrap_content"
                 layout="@layout/item_comment"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="#ecf0f1">


        <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Ajouter un commentaire..."
                android:ems="10"
                android:id="@+id/edit_commentaire"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@android:drawable/ic_menu_send"/>

    </LinearLayout>

</LinearLayout>

